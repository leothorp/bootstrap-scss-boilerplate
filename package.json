{
  "name": "fe",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "bootstrap": "^4.1.3"
  },
  "devDependencies": {
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "http-server": "^0.11.1"
  },
  "scripts": {
    "build-scss": "node-sass-chokidar styles/scss -o styles/css --output-style expanded",
    "watch-scss": "npm run build-scss && node-sass-chokidar styles/scss -o styles/css --watch --recursive --output-style expanded",
    "start-frontend-server": "http-server -p 3000",
    "start": "run-p watch-scss start-frontend-server"
  }
}
